@model Nunes_Sports.Models.Produto

@{
    ViewData["Title"] = "Criar Novo Produto";
}

<h1 class="text-center mb-4">Criar Novo Produto</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Criar" class="border p-4 rounded shadow">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Codigo" class="form-label"></label>
                <input asp-for="Codigo" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Preco" class="form-label"></label>
                <input asp-for="Preco" class="form-control" />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i> Criar
                </button>
                <a asp-action="Index" class="btn btn-secondary mt-2">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>
